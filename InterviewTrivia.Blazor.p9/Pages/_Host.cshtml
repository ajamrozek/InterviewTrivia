@page "/"
@namespace InterviewTrivia.BlazorApp.p9.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>InterviewTrivia.BlazorApp.p9</title>
    <base href="~/" />
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
    <link href="css/site.css" rel="stylesheet" />
    <script type="text/javascript">
        window.TreeFuncs = {
            GetSvg: () => { return document.getElementById("linesSvg"); },
            NodeOffsets:[],
            RegisterLine: (target) => {
                var currentNodeOffset = {
                    value: target.innerText, position: { top: target.getBoundingClientRect().top, left: target.getBoundingClientRect().left}
                };
                TreeFuncs.NodeOffsets.push(currentNodeOffset);
                
            }
        }
    </script>
</head>
<body>
    <app>
        @(await Html.RenderComponentAsync<App>(RenderMode.ServerPrerendered))
    </app>

    <script src="_framework/blazor.server.js"></script>
    <script src="_content/Blazor.Extensions.Canvas/blazor.extensions.canvas.js"></script>
</body>
</html>
